<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifLOGO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroung_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifLOGO"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/gif_logo" />

        <TextView
            android:id="@+id/HomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robot_font"
            android:text="iROBOT"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#17204E"
            android:textSize="80sp"
            android:textStyle="bold"
            android:translationY="-18dp"
            android:typeface="normal" />

        <ImageButton
            android:id="@+id/BluetoothButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_bluetooth"
            android:fontFamily="sans-serif-condensed"
            tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/DeployButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="100dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/DEPLOYER" />

    </LinearLayout>

</RelativeLayout>

